<div class="success">
  <%= flash[:notice] %>
</div>

<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% Book.all.each do |list| %>
      <tr>
        <td><%= list.title%></td>

        <td><%= list.body %> </td>

        <td><%= link_to 'Show', "/books/#{list.id}" %> </td>
        <td> <%= link_to 'Edit', "/books/#{list.id}/edit" %> </td>
        <td> <%= link_to "Destroy", destroy_book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %> </td>

      </tr>
    <% end %>
  </tbody>

</table>




<h1>New book</h1>
<% if @book.errors.any? %>
 <div>
 <h2> <%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <div>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>


  <%= f.submit 'Create Book' %>
<% end %>